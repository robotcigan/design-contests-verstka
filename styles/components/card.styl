.card
  background-color #fff
  border-radius 24px
  box-shadow $shadow
  display block
  margin-bottom 2.4rem
  padding 4rem
  transition $transition
  &__title
    font-size 2.4rem
    font-weight 700
    line-height 1.2
    margin-bottom .5em
    transition $transition
  &__prizes
    margin-bottom 1em
  &__prize
    display flex
    margin-bottom .5em
    &-place
      color $gray
      margin-right .5em
  &__middle
    display flex
    margin-bottom 1em
  &__dates
    margin-right 1em
  &__sponsr
    color $primary
  &__tags
    display flex
  &__tag
    background-color $blue-7
    border-radius $radius
    color $blue-100
    padding .5em
    &:not(:last-child)
      margin-right .8rem
  &__bottom
    align-items center
    display flex
    justify-content space-between
  &:hover
    box-shadow $shadow-hover
    // transform translateY(-2px)
    .card
      &__title
        color $primary



.sponsrs-logos
  display flex

.sponsr-logo
  border 4px solid #fff
  border-radius 50%
  &:not(:last-child)
    margin-right -.8rem






